doctype html
html
    head
        title toDO.list
        link(href="./node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
        script(src="./node_modules/bootstrap/dist/js/bootstrap.min.js")
        script(src ="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js")
        script.
            function sendLoginPostRequest() {
                $.post("/login_form", $("#loginForm").serialize(), (data) => { 
                    if(data==='LOGIN_OK') window.location ="/home";
                    $("#loginResult").html(data); 
                });
            }
    body
        h1 Login
        form(id="loginForm")
            input(type="text" id="campo1" name="campo1" placeholder="User")
            input(type="text" id="campo2" name="campo2" placeholder="Password")
            input(type="button" value="Login" onclick="sendLoginPostRequest()")
        br
        a(href="/register") Register
        br
        p(style="display:inline") Login result: 
        span(id="loginResult")
        p Session ID: #{sid}
        p User:  #{user}
        p Views: #{views}